# Backend Environment Variables for Vercel Deployment
# Add these to your Vercel environment variables

# Database (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tyredetect

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SERVICE=gmail

# Flask API URL (when you deploy the ML model)
FLASK_API_URL=https://your-ml-model-api.vercel.app

# Frontend URL
FRONTEND_URL=https://tyre-detection-model.vercel.app

# Node Environment
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL (your deployed frontend)
FRONTEND_URL=https://tyre-detection-model.vercel.app

# Flask API URL (your deployed ML model)
FLASK_API_URL=http://localhost:5000

# Email Configuration
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SERVICE=gmail

# Example for MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tyredetect?retryWrites=true&w=majority

# Example for Railway MongoDB:
# MONGODB_URI=mongodb://mongo:password@roundhouse.proxy.rlwy.net:port/railway
